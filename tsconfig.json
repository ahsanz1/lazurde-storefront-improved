{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "lib": ["es5", "es6", "es2022", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strictNullChecks": false,
    "checkJs": true,
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/cms/preview.tss", "sentry.client.config.ts", "lib/static-plps/plps/en-sa-min.js"],
  "exclude": ["node_modules"]
}